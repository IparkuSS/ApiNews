@model News.MVC.Models.ArticleData
<h1>Создание статей</h1>
<script src="~/js/ckeditor/ckeditor.js"></script>
<div id="main">
    <div class="inner">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="CreateArticle" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="ShortDescription" class="control-label"></label>
                        <input asp-for="ShortDescription" class="form-control" />
                        <span asp-validation-for="ShortDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Heading" class="control-label"></label>
                        <input asp-for="Heading" class="form-control" />
                        <span asp-validation-for="Heading" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Priority" class="control-label"></label>
                        <input asp-for="Priority" class="form-control" />
                        <span asp-validation-for="Priority" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input type="file" name="titleImageFile" id="titleImageFile" accept=".jpg,.png" />
                    </div>
                    <input type="hidden" asp-for="Image" value="/" />
                    <div class="div-box">
                        <label asp-for="Text"></label>
                        <textarea asp-for="Text"></textarea>
                        <span asp-validation-for="Text"></span>
                    </div>
                    <input type="hidden" name="subsectionId" id="subsectionId" value="@ViewBag.idsubsection" />
                    <input type="hidden" name="sectionId" id="sectionId" value="@ViewBag.idsection" />
                    <div class="form-group">
                        <input type="submit" value="Добавить" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    window.onload = function() {
        var newCKEdit = CKEDITOR.replace('@Html.IdFor(x=>x.Text)');
        newCKEdit.updateElement();
    }
</script>
